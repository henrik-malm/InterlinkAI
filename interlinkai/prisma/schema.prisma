generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL") // This correctly reads from .env / .env.local
}

// ================================================================== //
// --- MODEL SETUP                                                    //
// ================================================================== //

model ChatSession {
  id        String     @id @default(cuid())
  createdAt DateTime   @default(now())
  updatedAt DateTime   @updatedAt
  // title     String? default use the first 50 chars of the first chat message
  modelName String? // Optional field to store e.g., 'gemini-1.5-flash-latest'
  messages  ChatMessage[]
}

model ChatMessage {
  id        String     @id @default(cuid())
  createdAt DateTime   @default(now())
  sender    String
  text      String     @db.Text
  isError   Boolean    @default(false)
  chatSessionId String
  session       ChatSession @relation(fields: [chatSessionId], references: [id], onDelete: Cascade)
  @@index([chatSessionId])
}
