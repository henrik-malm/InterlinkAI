generator client {
  provider = "prisma-client-js"
  output   = "../node_modules/.prisma/client"
}

datasource db {
  provider = "sqlite"
  url      = "file:./dev.db" // AWARE - Moved here cause issues reading from .env (.env.local). Adding the db file to .gitignore so not push up the chat history by accident. Temporary solution till solve the issue. 
}

// ================================================================== //
// --- MODEL SETUP                                                    //
// ================================================================== //

model ChatSession {
  id        String     @id @default(cuid())
  createdAt DateTime   @default(now())
  updatedAt DateTime   @updatedAt
  // title     String? default use the first 50 chars of the first chat message
  modelName String? // Optional field to store e.g., 'gemini-1.5-flash-latest'
  messages  ChatMessage[]
}

model ChatMessage {
  id        String     @id @default(cuid())
  createdAt DateTime   @default(now())
  sender    String
  text      String     // Stores the actual message content
  isError   Boolean    @default(false)
  chatSessionId String
  session       ChatSession @relation(fields: [chatSessionId], references: [id], onDelete: Cascade)
  @@index([chatSessionId])
}
